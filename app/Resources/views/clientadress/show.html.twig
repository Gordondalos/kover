{% block body %}
    <h1>ClientAdress</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clientAdress.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ clientAdress.description }}</td>
            </tr>
            <tr>
                <th>Adress</th>
