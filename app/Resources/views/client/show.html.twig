{% extends 'base.html.twig' %}

{% block body %}
    <h1>Client</h1>




   <div class="col-xs-6 bg-faded">
       <table>
           <tbody>
           <tr>
               <th>Name</th>
               <td>{{ client.name }}</td>
           </tr>
           <tr>
               <th>Description</th>
               <td>{{ client.description }}</td>
           </tr>

           <tr>
               <th>Adress</th>

               <td>

                   <ul>
                       {% for adress in clientAdress %}
                           <li>{{ adress.adress }}</li>
                       {% endfor %}
                   </ul>

               </td>
           </tr>
           <tr>
               <th>Phone</th>
               <td>

                   <ul>
                       {% for phone in clientPhone %}
                           <li>{{ phone.phone }}</li>
                       {% endfor %}
                   </ul>

               </td>
           </tr>
           </tbody>
       </table>
       <div class="pull-xs-right">
           {{ form_start(delete_form) }}
           <input class="btn btn-warning " type="submit" value="Delete">

           <a class="btn btn-primary m-l-1" href="{{ path('client_index') }}">Back to the list</a>

           <a class="btn btn-success m-l-1" href="{{ path('client_edit', { 'id': client.id }) }}">Edit</a>


           {{ form_end(delete_form) }}

       </div>

   </div>
   <div class="col-xs-6">






   </div>



{% endblock %}
