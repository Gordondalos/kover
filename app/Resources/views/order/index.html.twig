{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datecreated</th>
                <th>Datefinish</th>
                <th>Description</th>
                <th>Status</th>
                <th>Products</th>
                <th>Price_total</th>
                <th>Client</th>
                <th>Clientadress</th>
                <th>Man_created</th>
                <th>Man_doit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td><a href="{{ path('order_show', { 'id': order.id }) }}">{{ order.id }}</a></td>
                <td>{% if order.dateCreated %}{{ order.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if order.dateFinish %}{{ order.dateFinish|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ order.description }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.products }}</td>
                <td>{{ order.pricetotal }}</td>
                <td>{{ order.client }}</td>
                <td>{{ order.clientAdress }}</td>
                <td>{{ order.mancreated }}</td>
                <td>{{ order.mandoit }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('order_show', { 'id': order.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('order_edit', { 'id': order.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('order_new') }}">{{ 'Create a new entry'|trans }}</a>
        </li>
    </ul>
{% endblock %}
