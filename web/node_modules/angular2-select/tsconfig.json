{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": false,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "core-js",
            "jasmine",
            "node"
        ]
    },
    "include": [
        "index.ts",
        "src/*.ts"
    ],
    "exclude": [
        "./**/*.ngfactory.ts",
        "./**/*.d.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
